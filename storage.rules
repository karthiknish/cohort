rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasValidDownloadToken() {
      return request.query.token != null
        && resource != null
        && resource.metadata != null
        && resource.metadata.firebaseStorageDownloadTokens != null
        && resource.metadata.firebaseStorageDownloadTokens.matches('(^|,)' + request.query.token + '(,|$)');
    }

    function isDeleteOperation() {
      return request.resource == null;
    }

    function isAllowedProposalUpload(userId) {
      return request.resource != null
        && request.resource.size < 40 * 1024 * 1024
        && request.resource.contentType in [
          'application/vnd.openxmlformats-officedocument.presentationml.presentation',
          'application/pdf'
        ]
        && request.resource.name.matches('^proposals/' + userId + '/[^/]+\\.(pptx|pdf)$');
    }

    function isAllowedAvatarUpload(userId) {
      return request.resource != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType in [
          'image/png',
          'image/jpeg',
          'image/jpg',
          'image/webp'
        ]
        && request.resource.name.matches('^users/' + userId + '/avatar/[^/]+\\.(png|jpe?g|webp)$');
    }

    function isAllowedCollaborationUpload(userId) {
      return request.resource != null
        && request.resource.size <= 15 * 1024 * 1024
        && request.resource.contentType in [
          'image/png',
          'image/jpeg',
          'image/jpg',
          'image/webp',
          'application/pdf',
          'application/msword',
          'application/vnd.openxmlformats-officedocument.wordprocessingml.document',
          'application/vnd.ms-powerpoint',
          'application/vnd.openxmlformats-officedocument.presentationml.presentation',
          'application/vnd.ms-excel',
          'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
          'text/plain',
          'text/csv',
          'text/markdown',
          'application/zip',
          'application/x-zip-compressed'
        ]
        && request.resource.name.matches('^users/' + userId + '/collaboration/[^/]+\\.(png|jpe?g|webp|pdf|docx?|pptx?|xlsx?|csv|txt|zip|md)$');
    }

    match /public/{allPaths=**} {
      allow read;
      allow write: if false;
    }

    match /users/{userId}/avatar/{imagePath=**} {
      allow read: if isOwner(userId) || hasValidDownloadToken();
      allow write: if isOwner(userId) && (isDeleteOperation() || isAllowedAvatarUpload(userId));
    }

    match /users/{userId}/collaboration/{filePath=**} {
      allow read: if isOwner(userId) || hasValidDownloadToken();
      allow write: if isOwner(userId) && (isDeleteOperation() || isAllowedCollaborationUpload(userId));
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }

    match /proposals/{userId}/{allPaths=**} {
      allow read: if isOwner(userId) || hasValidDownloadToken();
      allow write: if isOwner(userId) && (isDeleteOperation() || isAllowedProposalUpload(userId));
    }

    // Feature images for admin Kanban board (admin-only)
    match /features/{featureId}/{allPaths=**} {
      allow read: if isSignedIn() || hasValidDownloadToken();
      allow write: if isSignedIn(); // Admin check happens at API layer
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
